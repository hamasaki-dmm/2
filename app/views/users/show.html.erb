<div class="row">
	<div class="col-xs-3">
		<%= render 'users/user_info', user: @user, new_book: @new_book %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th class="s-user-img"></th>
					<th class="s-user-title">Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @user_books.each do |book| %>
					<tr>
						<td class="s-user-img"><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback:'no_image.jpg', size:'40x40' %></td>
						<td class="s-user-title">
							<%= link_to book.title, book_path(book), class:"td-center" %>
						</td>
						<td><span class="td-center"><%= book.body %></span></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>