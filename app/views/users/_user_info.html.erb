<h2>User info</h2>
<div class="user-info">
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg', size:"100x100" %>
	<table class="table">
		<tr>
			<th>name</th>
			<td class="user-data"><%= user.name %></td>
		</tr>
		<tr>
			<th>introduction</th>
			<td class="user-data"><%= user.introduction %></td>
		</tr>
	</table>
	<%= link_to edit_user_path(user), class:"glyphicon glyphicon-wrench btn btn-default edit-btn" do %>
	<% end %>
</div>
<div class="post-books">
	<h2>New book</h2>
	<%= form_for new_book, url:books_path do |f| %>
		<div class="form-group">
			<%= f.label :title, class:"label-position" %>
			<%= f.text_field :title, class:"form-control form-width" %>
		</div>

		<div class="form-group">
			<%= f.label :body, 'Opinion', class:"label-position" %>
			<%= f.text_area :body, class:"form-control form-width" %>
		</div>

		<%= f.submit 'Create Book', class:"btn btn-primary new-book-btn" %>
	<% end %>
</div>